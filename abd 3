#include "mbed.h"

DigitalOut led1(LED1);
AnalogOut izlaz(PTE30);

int main() {
    izlaz = 0;
    float vrijednost = 0;
    int brojac = 0;
    while (true) {
        wait_us(50);
        vrijednost += 1.0 / 50.0;
        izlaz = vrijednost;
        brojac++;
        if (brojac >= 50) {
            brojac = 0;
            vrijednost = 0;
        }
    }
}
