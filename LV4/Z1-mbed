#include "mbed.h"

AnalogIn pot(p15);

BusOut leds(p5,p6,p7,p8,p9,p10,p11,p12);

const unsigned char arr[10] = {0x00, 0x01, 0x02, 0x04, 0x08, 0x10, 0x20, 0x40, 0x80, 0xff};

int main() {
    int counter = 0;
    bool incrementMode = true;
    leds = arr[counter];
    
    while(1) {
        double vrijeme=pot*0.6;
        wait_us(1);
        if (incrementMode) {
            
            leds = arr[counter];
            if (counter == 9) {
                incrementMode = false;
                counter--;
                continue;
            }
            counter++;
        } else {
            leds = arr[counter];
            if (counter == 0) {
                incrementMode = true;
                counter++;
                continue;
            }
            counter--;
        }
    }
}
